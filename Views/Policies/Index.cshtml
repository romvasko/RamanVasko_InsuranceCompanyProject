@model IEnumerable<DatabaseSetupProject.Models.Policies>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PoliciesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoliciesDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PoliciesType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PoliciesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoliciesDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PoliciesType.PoliciesTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseCost)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
